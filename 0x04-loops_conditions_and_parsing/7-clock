#!/usr/bin/env bash
# This script displays hours from 0 to 12 and minutes from 1 to 59

hour=0  # Initialize the hour variable

while [ $hour -le 12 ]; do  # Loop through hours from 0 to 12
    echo "Hour: $hour"  # Display the current hour

    minute=1  # Initialize the minute variable
    while [ $minute -le 59 ]; do  # Loop through minutes from 1 to 59
        echo "$minute"  # Display the current minute
        ((minute++))  # Increment the minute
    done

    ((hour++))  # Increment the hour
done
